<div
  class="relative w-full h-20 flex justify-center items-start bg-transparent"
  id="inicio"
  
>
  <img src="/images/rectangulo.svg" alt="Decorativo" class="h-20 w-1/3 z-10" />
</div>

<nav class="bg-transparent z-20" >
  <div class="container-magenta py-4">
    <div class="flex justify-between items-center">
      <div class="md:hidden">
        <button id="menu-toggle" class="text-gray-800 focus:outline-none">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-8 w-8"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>

      <!-- Menú de navegación para escritorio -->
      <div class="hidden md:flex space-x-8 lg:space-x-14 ml-0 md:ml-8">
        <a
          href="#inicio"
          class="font-medium text-gray-800 hover:text-black transition-colors"
          >Inicio</a
        >
        <a
          href="#sobre-mi"
          class="font-medium text-gray-800 hover:text-black transition-colors"
          >Sobre mí</a
        >
      </div>

      <div class="hidden md:flex items-center">
        <a
          href="#proyectos"
          class="font-medium text-gray-800 hover:text-black transition-colors mr-8 lg:mr-14"
          >Proyectos</a
        >
        <a
          href="#contacto"
          class="font-medium text-gray-800 hover:text-black transition-colors mr-8 lg:mr-14"
          >Contáctame</a
        >
        <div class="flex space-x-4 lg:space-x-6">
          <a
            href="https://github.com/Meowwuw"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="GitHub"
            class="hover:scale-110 transition-transform"
          >
            <img
              src="/icons/githubMagenta.png"
              alt="GitHub"
              class="w-8 h-8 lg:w-10 lg:h-10"
            />
          </a>
          <a
            href="https://www.linkedin.com/in/magentaparedes/"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="LinkedIn"
            class="hover:scale-110 transition-transform"
          >
            <img
              src="/icons/linkedInMagenta.png"
              alt="LinkedIn"
              class="w-8 h-8 lg:w-10 lg:h-10"
            />
          </a>
        </div>
      </div>

      <!-- Íconos sociales para móviles -->
      <div class="flex md:hidden space-x-4">
        <a
          href="https://github.com/Meowwuw"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="GitHub"
          class="hover:scale-110 transition-transform"
        >
          <img src="/icons/githubMagenta.png" alt="GitHub" class="w-8 h-8" />
        </a>
        <a
          href="https://linkedin.com/"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="LinkedIn"
          class="hover:scale-110 transition-transform"
        >
          <img
            src="/icons/linkedInMagenta.png"
            alt="LinkedIn"
            class="w-8 h-8"
          />
        </a>
      </div>
    </div>

    <!-- Menú móvil desplegable -->
    <div
      id="mobile-menu"
      class="hidden md:hidden bg-white bg-opacity-90 rounded-lg shadow-lg mt-2 p-4 absolute left-0 right-0 z-50"
    >
      <div class="flex flex-col space-y-4">
        <a
          href="#"
          class="font-medium text-gray-800 hover:text-black transition-colors"
          >Inicio</a
        >
        <a
          href="#sobre-mi"
          class="font-medium text-gray-800 hover:text-black transition-colors"
          >Sobre mí</a
        >
        <a
          href="#proyectos"
          class="font-medium text-gray-800 hover:text-black transition-colors"
          >Proyectos</a
        >
        <a
          href="#contactame"
          class="font-medium text-gray-800 hover:text-black transition-colors"
          >Contáctame</a
        >
      </div>
    </div>
  </div>
</nav>

<script>
  const menuToggle = document.getElementById("menu-toggle");
  const mobileMenu = document.getElementById("mobile-menu");

  if (menuToggle) {
    menuToggle.addEventListener("click", function () {
      mobileMenu?.classList.toggle("hidden");
    });
  }

  const mobileLinks = mobileMenu?.querySelectorAll("a");
  mobileLinks?.forEach((link) => {
    link.addEventListener("click", function () {
      mobileMenu?.classList.add("hidden");
    });
  });
</script>
